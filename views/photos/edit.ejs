<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Edit photo information</h5>
                    <img class="img-fluid" src="<%= photo.image.url %>" alt="">
                    <form action="/photos/<%= photo._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description: </span></label>
                            <input class="form-control" type="text" id="description" name="photo[description]" value="<%= photo.description %>" autofocus>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="accessibility">Accessibility: </label>
                            <select class="form-select" id="accessibility" name="photo[accessibility]">
                                <option value='OnlyToAlumni' <%= photo.accessibility === 'OnlyToAlumni' ? 'selected': '' %>>Accessible only for alumni</option>
                                <option value='Global' <%= photo.accessibility === 'Global' ? 'selected': '' %>>Accessible for everyone</option>
                            </select>
                        </div>

                        <button class="btn btn-success btn-block">Update Photo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>