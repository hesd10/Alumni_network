    <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css' rel='stylesheet'/>

    <link rel="stylesheet" href="/stylesheets/home.css">
</head>

<body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">Alumni</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link active" aria-current="page" href="#">Homepage</a>
                    <a class="nav-link" href="/introduction">Introduction</a>
                    <a class="nav-link" href="/alumni">Alumni</a>
                    <a class="nav-link" href="/photos">Photos</a>
                    <a class="nav-link" href="/contact">Contact</a>
                    <a class="nav-link" href="/forum">Forum</a>
                    <div class="nav-link">|</div>
                    <% if(!currentUser) { %>
                        <a class="nav-link" href="/login">Login</a>
                        <a class="nav-link" href="/register">Register</a>
                    <% } else { %>
                        <a class="nav-link" href="/alumni/<%= currentUser.username %>">User</a>
                        <a class="nav-link" href="/logout">Logout</a>
                    <% } %>
                </nav>
            </div>
        </header>

        <main class="px-3">
            <%- include('partials/flash') %>
            <div class='container d-flex justify-content-center text-body pb-5'>
                <div id="cluster-map" style='width: 100%; height: 40vh'></div>
            </div>
            <h1>Alumni</h1>
            <p class="lead"> See all your alumni here! <br> Feel yourself still in the college! <br>
                Feel free to share your information to your alumni!</p>
        </main>

        <footer class="mt-auto text-white-50">
            <p>&copy; 2021 </p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
